.div{:style => "position: relative; top: 75px; z-index:1; left: 275px; width: 80%;"}
  .container
    .login-logo
      %a{:href => "index.html"}
        %img.align-content{:alt => "", :src => "images/logo.png"}/
    .login-form
      %h3{:id=>"updatetitle", :style=>"text-align: center;"} Update Account
      %br
      -if(flash[:danger]!=nil)
        %div{:class => "alert alert-danger"}
          %H6=flash[:danger]
      = form_for @user, :action => user_path(@user.id), :method => :post do |f|
        %div.form-row
          %div{:class=>"form-group col-md-4"}
            = f.label "firstname"
            = f.text_field :fname, :required => true, :class=>"form-control", :id=>"inputfirstname", :placeholder => "Firstname"
          %div{:class=>"form-group col-md-4"}
            = f.label "middlename"
            = f.text_field :mname,:required => true, :class=>"form-control", :id=>"inputmiddlename", :placeholder => "Middlename"
          %div{:class => "form-group col-md-4"}
            = f.label "lastname"
            = f.text_field :lname, :required =>true, :type=>"text", :class=>"form-control", :id=>"inputlastname", :placeholder=>"Lastname"
        .form-group
          = f.label "Division/Department"
          = f.select :Division_Department, options_for_select(@office), {}, :id=>"inputDivDept", class: "form-control"
        .form-group
          = f.label "position"
          = f.select :position, options_for_select(["Student", "Admin Officer", "Faculty", "Staff", "Chairperson/Head"], @user.position), {}, :id=>"inputposition", :class=> "form-control"
        .form-group
          = f.label "username"
          = f.text_field :username, :required =>true, :placeholder => "Username", :type => "text", class: "form-control"
        .form-group
          = f.label "email"
          = f.email_field :email, :required =>true, :placeholder => "Email", :type => "email", class: "form-control"
        //.form-group
        //  = f.label "old password"
        //  = password_field_tag "old_password", :required =>true, :placeholder => "Old Password", :type => "password", :pattern=>".{8,}",:title=>"Password should be a minimum of 8 characters", :id=>"password", class: "form-control"
        .form-group
          = f.label "new password"
          = f.password_field :password, :required =>true, :placeholder => "New Password", :type => "password", :pattern=>".{8,}",:title=>"Password should be a minimum of 8 characters", :id=>"password", class: "form-control"
        .form-group
          = f.label "confirm password"
          = f.password_field :password_confirmation, :required =>true, :placeholder => "Confirm Password", :type => "password", :oninput=>"check(this);", :id=>"confirmpassword", class: "form-control"

        %button.btn.btn-primary.btn-flat.m-b-30.m-t-30{:type => "submit"} Update Account
    %footer{:id=>"userfooter", :style=>"text-align: center;"}
