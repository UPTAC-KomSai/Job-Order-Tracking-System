      .page-header.float-center
        .page-title
          %h3{:style=>"text-align: center;"} Accounts
  .content.mt-3
    .custom-tab
      %nav
        #nav-tab.nav.nav-tabs{:role => "tablist"}
          %a#custom-nav-active-tab.nav-item.nav-link.active{"aria-controls" => "custom-nav-active", "aria-selected" => "true", "data-toggle" => "tab", :href => "#custom-nav-active", :role => "tab"} Active Accounts
          %a#custom-nav-inactive-tab.nav-item.nav-link{"aria-controls" => "custom-nav-inactive", "aria-selected" => "false", "data-toggle" => "tab", :href => "#custom-nav-inactive", :role => "tab"} Inactive Accounts
          .col-sm-4.ml-auto
            .page-header.float-right
              = link_to(new_user_path, method: :get, class: 'btn btn-success') do
                %i.fa.fa-plus-square-o
                Â  Add New Account
      #nav-tabContent.tab-content.pl-3.pt-2
        #custom-nav-active.tab-pane.fade.show.active{"aria-labelledby" => "custom-nav-active", :role => "tabpane"}
          .animated.fadeIn
            .row
              .col-md-12
                .card
                  .card-body
                    %table#bootstrap-data-table.table.table-striped.table-bordered
                      %thead
                        %tr
                          %th Firstname
                          %th Middle Name
                          %th Last Name
                          %th Division/Department
                          %th Position
                      %tbody
                        -@users_active.each do |req|
                          %tr{:onclick => "location.href='#{user_path(req)}'"}
                            %td= req.fname
                            %td= req.mname
                            %td= req.lname
                            -@office = Office.find(req.office_id)
                            %td= @office.name
                            %td= req.position
        #custom-nav-inactive.tab-pane.fade{"aria-labelledby" => "custom-nav-inactive", :role => "tabpanel"}
          .animated.fadeIn
            .row
              .col-md-12
                .card
                  .card-body
                    %table#bootstrap-data-table.table.table-striped.table-bordered
                      %thead
