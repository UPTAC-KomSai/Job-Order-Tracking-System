.div{:style => "position: relative; top: 75px; z-index:1; left: 275px; width: 80%;"}
  .breadcrumbs
    .col-sm-12
      .page-header.float-center
        .page-title
          %h3{:style=>"text-align: center;"}= @title
  %br
  .content.mt-3
    .row
      .col-sm-4.ml-auto
        .page-header.float-right
          = link_to(new_user_path, method: :get, class: 'btn btn-success mb-2') do
            %i.fa.fa-plus-square-o
            Â  Add New Account
    .animated.fadeIn
      .row
        .col-md-12
          .card
            .card-body
              %table#bootstrap-data-table.table.table-striped.table-bordered
                %thead
                  %tr
                    %th Firstname
                    %th Middle Name
                    %th Last Name
                    %th Division/Department
                    %th Position
                %tbody
                  -@users.each do |req|
                    %tr{:onclick => "location.href='#{user_path(req)}'"}
                      %td= req.fname
                      %td= req.mname
                      %td= req.lname
                      -@office = Office.find(req.office_id)
                      %td= @office.name
                      %td= req.position


