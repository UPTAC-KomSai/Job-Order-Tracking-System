%body
  / Left Panel
  %aside#left-panel.left-panel
    %nav.navbar.navbar-expand-sm.navbar-default
      .navbar-header
        %button.navbar-toggler{"aria-controls" => "main-menu", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-target" => "#main-menu", "data-toggle" => "collapse", :type => "button"}
          %i.fa.fa-bars
        %a.navbar-brand{:href => "./"}
          %img{:alt => "Logo", :src => "images/logo.png"}/
        %a.navbar-brand.hidden{:href => "./"}
          %img{:alt => "Logo", :src => "images/logo2.png"}/
      #main-menu.main-menu.collapse.navbar-collapse
        %ul.nav.navbar-nav
          %h3.menu-title General
          / /.menu-title
          %li.active
            %a{:href => "/index"}
              %i.menu-icon.fa.fa-dashboard>
              Dashboard
          %li.active
            %a{:href => "/request_form"
              %i.menu-icon.fa.fa-edit>
              Request Job Order
          %li.active
            %a{:href => "/index"}
              %i.menu-icon.fa.fa-spinner>
              Pending Requests
          %li.active
            %a{:href => "/index"}
              %i.menu-icon.fa.fa-gavel>
              On-going Jobs
          %li.active
            %a{:href => "/index"}
              %i.menu-icon.fa.fa-check>
              Finished Jobs
          %li.active
            %a{:href => "/index"}
              %i.menu-icon.fa.fa-trash-o>
              Trash
      / /.navbar-collapse
  / /#left-panel
  / Left Panel
  / Right Panel
  #right-panel.right-panel
    / Header
    %header#header.header
      .header-menu
        .col-sm-7
          %a#menuToggle.menutoggle.pull-left
            %i.fa.fa.fa-tasks
          .header-left
            %button.search-trigger
              %i.fa.fa-search
            .form-inline
              %form.search-form
                %input.form-control.mr-sm-2{"aria-label" => "Search", :placeholder => "Search ...", :type => "text"}/
                %button.search-close{:type => "submit"}
                  %i.fa.fa-close
            .dropdown.for-notification
              %button#notification.btn.btn-secondary.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                %i.fa.fa-bell
                %span.count.bg-danger 5
              .dropdown-menu{"aria-labelledby" => "notification"}
                %p.red You have 3 Notification
                %a.dropdown-item.media.bg-flat-color-1{:href => "#"}
                  %i.fa.fa-check
                  %p Server #1 overloaded.
                %a.dropdown-item.media.bg-flat-color-4{:href => "#"}
                  %i.fa.fa-info
                  %p Server #2 overloaded.
                %a.dropdown-item.media.bg-flat-color-5{:href => "#"}
                  %i.fa.fa-warning
                  %p Server #3 overloaded.
            .dropdown.for-message
              %button#message.btn.btn-secondary.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                %i.ti-email
                %span.count.bg-primary 9
              .dropdown-menu{"aria-labelledby" => "message"}
                %p.red You have 4 Mails
                %a.dropdown-item.media.bg-flat-color-1{:href => "#"}
                  %span.photo.media-left
                    %img{:alt => "avatar", :src => "images/avatar/1.jpg"}/
                  %span.message.media-body
                    %span.name.float-left Jonathan Smith
                    %span.time.float-right Just now
                    %p Hello, this is an example msg
                %a.dropdown-item.media.bg-flat-color-4{:href => "#"}
                  %span.photo.media-left
                    %img{:alt => "avatar", :src => "images/avatar/2.jpg"}/
                  %span.message.media-body
                    %span.name.float-left Jack Sanders
                    %span.time.float-right 5 minutes ago
                    %p Lorem ipsum dolor sit amet, consectetur
                %a.dropdown-item.media.bg-flat-color-5{:href => "#"}
                  %span.photo.media-left
                    %img{:alt => "avatar", :src => "images/avatar/3.jpg"}/
                  %span.message.media-body
                    %span.name.float-left Cheryl Wheeler
                    %span.time.float-right 10 minutes ago
                    %p Hello, this is an example msg
                %a.dropdown-item.media.bg-flat-color-3{:href => "#"}
                  %span.photo.media-left
                    %img{:alt => "avatar", :src => "images/avatar/4.jpg"}/
                  %span.message.media-body
                    %span.name.float-left Rachel Santos
                    %span.time.float-right 15 minutes ago
                    %p Lorem ipsum dolor sit amet, consectetur
        .col-sm-5
          .user-area.dropdown.float-right
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#"}
              %img.user-avatar.rounded-circle{:alt => "User Avatar", :src => "images/admin.jpg"}/
            .user-menu.dropdown-menu
              %a.nav-link{:href => "#"}
                %i.fa.fa-.user>
                My Profile
              %a.nav-link{:href => "#"}
                %i.fa.fa-.user>
                Notifications
                %span.count 13
              %a.nav-link{:href => "#"}
                %i.fa.fa.-cog>
                Settings
              %a.nav-link{:href => "#"}
                %i.fa.fa-power.-off>
                Logout
    / /header
    / Header
    .breadcrumbs
      .col-sm-4
        .page-header.float-left
          .page-title
            %h1 Dashboard
      .col-sm-8
        .page-header.float-right
          .page-title
            %ol.breadcrumb.text-right
              %li.active Dashboard
    .content.mt-3
      .animated.fadeIn
        .row
          .col-sm-12.mb-4
            .card-group
              .card.col-lg-2.col-md-6.no-padding.bg-flat-color-1
                .card-body
                  .h1.text-muted.text-right.mb-4
                    %i.fa.fa-spinner.text-light
                  .h4.mb-0.text-light
                    %span.count 87500
                  %small.text-uppercase.font-weight-bold.text-light Pending Requests
                  .progress.progress-xs.mt-3.mb-0.bg-light{:style => "width: 40%; height: 5px;"}
              .card.col-lg-2.col-md-6.no-padding.no-shadow
                .card-body.bg-flat-color-2
                  .h1.text-muted.text-right.mb-4
                    %i.fa.fa-gavel.text-light
                  .h4.mb-0.text-light
                    %span.count 385
                  %small.text-uppercase.font-weight-bold.text-light On-going Jobs
                  .progress.progress-xs.mt-3.mb-0.bg-light{:style => "width: 40%; height: 5px;"}
              .card.col-lg-2.col-md-6.no-padding.no-shadow
                .card-body.bg-flat-color-3
                  .h1.text-right.mb-4
                    %i.fa.fa-check.text-light
                  .h4.mb-0.text-light
                    %span.count 1238
                  %small.text-light.text-uppercase.font-weight-bold Finished Jobs
                  .progress.progress-xs.mt-3.mb-0.bg-light{:style => "width: 40%; height: 5px;"}
                  .col-lg-3.col-md-6
          .col-lg-3.col-md-6
            .card
              .card-body
                .stat-widget-one
                  .stat-icon.dib
                    %i.ti-money.text-success.border-success
                  .stat-content.dib
                    .stat-text Total Cost
                    .stat-digit 1,012
          .col-lg-3.col-md-6
            .card
              .card-body
                .stat-widget-one
                  .stat-icon.dib
                    %i.ti-user.text-primary.border-primary
                  .stat-content.dib
                    .stat-text New Requests
                    .stat-digit 961
          .col-lg-3.col-md-6
            .card
              .card-body
                .stat-widget-one
                  .stat-icon.dib
                    %i.ti-layout-grid2.text-warning.border-warning
                  .stat-content.dib
                    .stat-text Active Projects
                    .stat-digit 770
  / /#right-panel
  / Right Panel
  %script{:src => "assets/js/vendor/jquery-2.1.4.min.js"}
  %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.3/umd/popper.min.js"}
  %script{:src => "assets/js/plugins.js"}
  %script{:src => "assets/js/main.js"}
  %script{:src => "assets/js/lib/chart-js/Chart.bundle.js"}
  %script{:src => "assets/js/dashboard.js"}
  %script{:src => "assets/js/widgets.js"}
  %script{:src => "assets/js/lib/vector-map/jquery.vmap.js"}
  %script{:src => "assets/js/lib/vector-map/jquery.vmap.min.js"}
  %script{:src => "assets/js/lib/vector-map/jquery.vmap.sampledata.js"}
  %script{:src => "assets/js/lib/vector-map/country/jquery.vmap.world.js"}
  :javascript
    ( function ( $ ) {
        "use strict";

        jQuery( '#vmap' ).vectorMap( {
            map: 'world_en',
