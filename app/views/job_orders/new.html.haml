.div{:style => "position: relative; top: 75px; z-index:1; left: 275px; width: 80%;"}
  - flash.each do |key, value|
    .col-sm-12
      .alert.alert-success.alert-dismissible.fade.show{:role => "alert"}
        %span.badge.badge-pill.badge-warning Error
        =value
        %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
          %span{"aria-hidden" => "true"} ×
  = form_for(:job_order, :url => '/job_orders') do |job|
    = render(:partial => "request_form", :locals => {:job => job})
    .float-right{:style => "padding-bottom: 25px; padding-right: 15px;"}
      %button.btn.btn-primary{:type => "submit"}
        %i.fa.fa-check>
          Submit
      = link_to("/job_orders", method: :get, class: 'btn btn-secondary') do
        %i.fa.fa-times>
          Cancel

