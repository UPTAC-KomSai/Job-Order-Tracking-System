.div{:style => "position: relative; top: 75px; z-index:1; left: 275px; width: 80%;"}
  / /header
  / Header
  .breadcrumbs
    .col-sm-4
      .page-header.float-left
        .page-title
          %h3 Pending Approval
  .content.mt-3
    .animated.fadeIn
      .row
        .col-md-12
          .card
            .card-body
              %table#bootstrap-data-table.table.table-striped.table-bordered
                %thead
                  %tr
                    %th Control Number
                    %th Job Type
                    %th Requester
                    %th Actions
                %tbody
                  -@requests.each do |req|
                    %tr
                      %td= req.control_no
                      %td= req.job_type
                      %td= User.find(req.user_id).fname + " " + User.find(req.user_id).mname + " " + User.find(req.user_id).lname
                      %td
                        = link_to(admin_approval_path(req), method: :get, class: 'btn btn-primary') do
                          %i.fa.fa-eye>
                            View
                        = link_to(admin_approve_job_order_path(req), method: :get, class: 'btn btn-success') do
                          %i.fa.fa-check>
                            Approve
                        = link_to(admin_reject_job_order_path(req), method: :get, class: 'btn btn-danger') do
                          %i.fa.fa-times>
                            Reject
    / .animated
  / .content
