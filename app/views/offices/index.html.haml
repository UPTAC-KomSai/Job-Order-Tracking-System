  / /header
  / Header
  .breadcrumbs
    .col-sm-4
      .page-header.float-left
        .page-title
          %h3 System Office
  -if(flash[:success]!=nil)
    %div{:class => "alert alert-success"}
      %H6=flash[:success]
  -if(flash[:danger]!=nil)
    %div{:class => "alert alert-danger"}
      %H6=flash[:danger]
  .content.mt-3
    .animated.fadeIn
      .row
        .col-md-12
          .card
            .card-body
              %table#bootstrap-data-table.table.table-striped.table-bordered
                %thead
                  %tr
                    %th Office Name
                    %th Office Acronym
                    %th Chairperson/Head
                %tbody
                  -@office.each do |office|
                    %tr
                      %td= office.name
                      %td= office.acronym
                      %td= @user.find_by_id(office.head_id)
            = link_to(new_office_path, method: :get, class: 'btn btn-success') do
              %i.fa.fa-check>
              Â  Add Office
    / .animated
  / .content
